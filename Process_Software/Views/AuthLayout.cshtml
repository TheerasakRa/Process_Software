@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center ">
    <div class="col mt-5 ">
        <div class="card login-logout-card d-flex justify-content-end mx-auto">
            <div class="card-header" >
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link" style="border-top-left-radius: 12px;" href="@Url.Action("Login", "Home")">
                            Log In
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="border-top-right-radius: 70px;" href="@Url.Action("Register", "Home")">
                            Register
                        </a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="col-10 my-4">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(function () {
            const currentPage = location.pathname.toLowerCase();
            $('.nav-tabs li a').each(function () {
                const $this = $(this);
                const linkUrl = $this.attr('href').toLowerCase();

                if (currentPage === linkUrl) {
                    $this.addClass('active');
                } else {
                    $this.removeClass('active');
                }
            })
        })
    </script>
}
